<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    

    <script src="https://kit.fontawesome.com/b5956fc21b.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/d4cb0f35d2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/partials.css">
    <link rel="stylesheet" href="../css/productCreateForm.css">
    <title>Login</title>
</head>
<body>
<header>
    <div class="top-header">

        <a href="/">
            <div class="logo-to-menu"> <img class="header-logo" src="../img/icons/logo-sin-fondo-1-beige.png" alt="logo" > </a>
        </a>
</header>
<main>
    <form method="post" action = "/save" enctype="multipart/form-data">
        <div class="registroProducto-prod-create-form">
            
            <h3> CREACIÓN DE PRODUCTOS</h3>

            <!-- <br>
            <label for="codigo"></label>
            <h4>Código de Producto: </h4>
            <input  type="number" name="id" id="id" placeholder="Código" required> 
            <br> -->

            <label for="nameproduct"></label>
            <h4>Nombre del Producto: </h4><input type="text" name="name" id="name" placeholder="Nombre del Producto" required>
            <br>

            <label for="description"></label>
            <h4>Descripción: </h4><input type="text" name="description" id="description" placeholder="Descripción">
            <br>

            <label for="price"></label>
            <h4>Precio: </h4>
            <input type="number" name="price" id="price" placeholder="Precio">
            <br>

            <label for="year"></label>
            <h4>Año de Cosecha: </h4><input type="text" name="year" id="year" placeholder="Año de Cosecha" required>
            <br>
            
            
            <label for="varietal"><h4>Variedad: </h4></label>
            <select name="varietal" id="varietal" required>
                <option value="">Seleccione una variedad:</option>
                
                <% varietal.forEach(element => { %>
                    <option value="<%= element.id %>"><%= element.varietal_name %></option>
                <% }) %>
                
            </select>

            <label for="brand"><h4>Marca: </h4></label>
            <select name="brand" id="brand" required>
                <option value="">Seleccione una marca:</option>
                <% brand.forEach(element => { %>
                    <option value="<%= element.id %>"><%= element.brand_name %></option>
                <% }) %>
            </select>
            
            <!-- <input type="text" name="varietal" id="varietal" placeholder="Variedad" required> -->
            <br>
            
            <label for="origen"> <h4>País de Origen:</h4></label>
                <select  name="origen" id="origen" required>
                    <option value="">Seleccione origen:</option>
                    <% origin.forEach(element => { %>
                        <option value="<%= element.id %>"><%= element.country %></option>
                    <% }) %>
                </select>
            </br>
            
            <label for="region"><h4>Región: </h4></label>
            <select name="region" id="region" required>
                <option value="">Seleccione una región:</option>
                <% region.forEach(element => { %>
                    <option value="<%= element.id %>"><%= element.region %></option>
                <% }) %>
            </select>
            
            <label for="category"> <h4>Categorías</h4></label>
                <select  name="category" id="category" required>
                    <option value="">Seleccione una categoría:</option>
                    <% category.forEach(element => { %>
                        <option value="<%= element.id %>"><%= element.category_name %></option>
                    <% }) %>
                </select>
            </br>
            
            <label for="image"></label>
            <h4 class="prod-img-prod-create-form">Imágen de producto</h4><input type="file" name="image" id="image">
            
            <br>
            <div class="prodCreate-buttons-prod-create-form">
                <button type="submit" value="Crear">CREAR</button>
                
                <!-- <button type="reset" value="Borrar">BORRAR</button>
                <br> -->
            </div>

            
        </div>
    </form>
</main>
</body>
