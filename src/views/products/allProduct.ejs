<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head2') %> 


<body>
    <%- include('../partials/header2') %>

        <!-- Catalogue -->
        <div class="container-fluid opacity-dark-background">
            <h2 class="centered-title primary-color">Nuestros productos</h2>
            <!-- Example Code -->
            <div class="container-card row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% products.forEach (product =>  { %>
                <div class="col col-center">
                    <div class="card text-bg-secondary" >
                        <div class="card-body text-center">
                            <a href="/productDetail/<%= product.id %>">
                                <img src="/img/product/<%= product.image%>" class="card-img-top"
                                alt="...">
                            </a>
                            <h5 class="card-title primary-color"><%= product.name %></h5>
                            <p class="card-text primary-color"><%= product.description %></p>
                            <div class="line"></div>
                            <p class="bold primary-color"><%= product.price %></p>
                            <a href="#" class="btn btn-outline-primary">Agregar al carrito</a>
                            <!-- amount -->
                            <div class="d-flex justify-content-evenly btn-amount btn">
                                <button type="button" class="btn btn-outline-primary col-2">-</button>
                                <input type="text" id="amount" class="btn btn-outline-primary col-4">
                                <button type="button" class="btn btn-outline-primary col-2">+</button>
                            </div>
                        </div>
                    </div>
                </div>      
                <% }) %>
            </div>
            <!-- End Example Code -->

        </div>

        <%- include('../partials/footer2') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                crossorigin="anonymous"></script>
</body>

<body class="">

</html>