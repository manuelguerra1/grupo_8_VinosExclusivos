<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head2') %> 
<body class="login-body">
        
        <%- include('../partials/header2') %> 
        <hr>
        <main>

            
            <section class="login-section">
               <div class="loginBox">
                      <!-- <h2 class="login-h2">Iniciar Sesión</h2> -->

                      <form action="/processLogin" method="post" class="login-form">
                          <!--Nombre Usuario-->
                          <label for="nombreUsuario">Ingresá tu Correo</label>
                          <input type="email" placeholder="Enter email" name="email" id="email">
                            <% if (locals.errors && errors.email) { %>
                            <p style="color: red"> <%= errors.email.msg %></p>
                            <% } %>  
                        
      
                          <!--Password-->
                          <label for="password">Ingresá tu contraseña</label>
                          <input type="password" placeholder="Enter Password" name="password" id="password">
                          <% if (locals.errors && errors.password) { %>
                            <p style="color: red"> <%= errors.password.msg %></p>
                            <% } %>  
                        
                          <div class="rememberme-login">
                            <input type="checkbox" name="rememberme" id="rememberme">
                            <span style="text-decoration: underline;" class="checkmark">Recordame</span>
                          </div>
                          
   
                           <!-- PASAR EL INPUT SUBMIT A UN BUTTON SUBMIT -->
                           
                        <div>
                            <button type="submit" value="INICIAR SESIÓN">INICIAR SESIÓN</button>
                        </div>
                           
                           <!-- PASAR EL INPUT SUBMIT A UN BUTTON SUBMIT -->
                           
                          <div class="container-login-a">
                          <a style="margin-bottom: 30px; font-weight: 700; font-size: 15px; text-decoration: underline;" class="login-a" href="/register">¿No tenés cuenta?</a>
                          </div>
                          
      
                      </label>
                      </form>
               </div>
            </section>
        </main>

        <%- include('../partials/footer2') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script> 
        <script src="/js/loginValidator.js" type="text/javascript"></script>
        <script src="/js/createFunctions.js" type="text/javascript"></script>
    </body>
</html>