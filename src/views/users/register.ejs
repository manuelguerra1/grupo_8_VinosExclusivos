<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head2') %> 
<body class="reg2-body">
    <%- include('../partials/header2') %> 
    <main class="register2-main">
        <form class="user-register-form" method="post" action = "/userSave"  enctype="multipart/form-data" >
            <div class="register2">
                <div class="reg2-box">

                    <h1> Crear Cuenta </h1>

                    <div class="reg2-name-lastname">

                        <label for="name"></label>
                        <input type="text" name="name" id="name" placeholder="Nombre">
                        <% if (locals.errors && errors.name) { %>
                            <p style="color: red;"><%= errors.name.msg %></p>  
                         <% } %>

                        <label for="last-name"></label>
                        <input type="text" name="lastname" id="last-name" placeholder="Apellido">
                        <% if (locals.errors && errors.lastname) { %>
                            <p style="color: red;"><%= errors.lastname.msg %></p>  
                         <% } %>

                    </div>

                    <div class="reg2-username-email">

                        <label for="user-name"></label>
                        <input type="text" name="username" id="user-name" placeholder="Nombre de usuario" >
                        <% if (locals.errors && errors.username) { %>
                            <p style="color: red;"><%= errors.username.msg %></p>  
                         <% } %>

                        <label for="email"></label>
                        <input type="email" name="email" id="email" placeholder="Correo electrónico">
                        <% if (locals.errors && errors.email) { %>
                            <p style="color: red;"><%= errors.email.msg %></p>  
                        <% } %>

                    </div>

                    <div class="reg2-password-confpassword">

                        <label for="password"></label>
                        <input type="password" name="password" id="password" placeholder="Contraseña">
                        <% if (locals.errors && errors.password) { %>
                            <p style="color: red;"><%= errors.password.msg %></p>  
                         <% } %>

                        <label for="confirm-password"></label>
                        <input type="password" name="confirmpassword" id="confirm-password" placeholder="Confirmar contraseña">
                        <% if (locals.errors && errors.confirmpassword) { %>
                            <p style="color: red;"><%= errors.confirmpassword.msg %></p>  
                         <% } %>

                    </div>

                    <div class="reg2-prof-img">
                        <label for="image"></label>
                        <h2>Foto de perfil</h2>
                        <input type="file" name="avatar" id="image">
                        <% if (locals.errors && errors.avatar) { %>
                            <p style="color: red;"><%= errors.avatar.msg %></p>  
                         <% } %>
                    </div>

                    <div class="reg2-terms-cond-register">
                        <input type="checkbox" name="terminos-y-condiciones" id="">Acepto términos y condiciones.
                    </div>
                    <div class="reg2-button">
                        <button class="userRegister-buttons-user-register-form" type="submit" value="Crear">REGISTRARTE</button> 
                        <button class="del-btn-reg2" type="reset"  value="Borrar">BORRAR</button>   
                    </div>
                </div>
                
            </div>          


         </form>
    </main>
    
    <%- include('../partials/footer2') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
    <script src="/js/userRegister.js" type="text/javascript"></script>
    <script src="/js/userFunctions.js" type="text/javascript"></script>
</body>
</html>